<html>
    <head>
        <% include partials/head.ejs %>
        <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
        <script>
                function init_map() {
                    var var_location = new google.maps.LatLng(47.66749733 , 9.173832638);
                    
                    var var_mapoptions = {
                        center: var_location,
                        zoom:16
                    };
                    
                    var var_marker = new google.maps.Marker({
                        position: var_location,
                        map: var_map,
                        title: "edureka"});
                    var var_map = new google.maps.Map(document.getElementById("map-container"),
                                                     var_mapoptions);
                    var_marker.setMap(var_map);
                }
                google.maps.event.addDomListener(window, 'load', init_map);
            </script>
            <style>
                #map-container  {height:300px}
            </style>
    </head>
    <body id="contactPage">        
        <% include partials/navbar.ejs %>
        <div id="map-container" class="col-md-8 col-md-offset-2"></div><br><br>
        
        <% if ( typeof(contactInfo[0]) !== 'undefined'  ){ %>
        <div class="jumbotron col-md-4 col-md-offset-4" id="contactHere">  
            <p>Company Name: <%= contactInfo[0].company %></p>          
            <p>Street Name: <%= contactInfo[0].street %></p>
            <p>Door No: <%= contactInfo[0].doorNo %></p>
            <p>Additional Info: <%= contactInfo[0].additionalLines %></p>
            <p>Phone: <%= contactInfo[0].phone %></p>
        </div> 
        <% } %>

    </body>
</html>