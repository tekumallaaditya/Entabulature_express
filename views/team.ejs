<html>
    <head>
        <% include partials/head.ejs %>
    </head>
    <body id="teamPage">
        <% include partials/navbar.ejs %>      
        <div class="container">
            <div class="jumbotron">
                <div class="table-responsive">
                    <% if (members != null || typeof(members) != 'undefined') { %>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Designation</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < members.length; i++) {%>
                            <tr>
                                <td><%= members[i].name %></td>
                                <td><%= members[i].designation %></td>
                                <td><%= members[i].description %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <div><h3>Please go back to the <a href="/team">team</a>page</h3></div>
                    <% } %>
                </div>
            </div>
        </div>        
    </body>
</html>